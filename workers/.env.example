# Camunda 8 SaaS Credentials
# Get these from: Camunda Console > Clusters > Your Cluster > API > Create Client

# Zeebe Connection
ZEEBE_ADDRESS=YOUR_CLUSTER_ID.bru-2.zeebe.camunda.io:443
ZEEBE_CLIENT_ID=YOUR_CLIENT_ID
ZEEBE_CLIENT_SECRET=YOUR_CLIENT_SECRET

# OAuth Token URL (usually doesn't need to change)
ZEEBE_AUTHORIZATION_SERVER_URL=https://login.cloud.camunda.io/oauth/token
ZEEBE_TOKEN_AUDIENCE=zeebe.camunda.io

# Optional: Camunda Operate/Tasklist (for REST API access)
CAMUNDA_OAUTH_URL=https://login.cloud.camunda.io/oauth/token
CAMUNDA_TASKLIST_BASE_URL=https://bru-2.tasklist.camunda.io/YOUR_CLUSTER_ID
CAMUNDA_OPERATE_BASE_URL=https://bru-2.operate.camunda.io/YOUR_CLUSTER_ID

# ESB Configuration
ESB1_URL=http://localhost:3001
ESB2_URL=http://localhost:3002
ESB1_PORT=3001
ESB2_PORT=3002

# UI Server Ports - Product Promotion Workflow
UI_DATA_ANALYSIS_PORT=4001
UI_COMMERCIAL_PORT=4002
UI_FINANCE_PORT=4003
UI_MARKETING_PORT=4004
UI_IT_PORT=4005

# UI Server Ports - Stock Replenishment Workflow (additional)
UI_LOGISTICS_PORT=4006
UI_MERCHANDISING_PORT=4007

