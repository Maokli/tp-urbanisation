<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Data & Analysis Department | Product Promotion System</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/socket.io/socket.io.js"></script>
  <style>
    @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
    @keyframes slideOut { from { transform: translateX(0); opacity: 1; } to { transform: translateX(100%); opacity: 0; } }
    @keyframes pulse-border { 0%, 100% { box-shadow: 0 0 0 0 rgba(99, 102, 241, 0.4); } 50% { box-shadow: 0 0 0 8px rgba(99, 102, 241, 0); } }
    .notification-enter { animation: slideIn 0.3s ease-out forwards; }
    .notification-exit { animation: slideOut 0.3s ease-in forwards; }
    .task-new { animation: pulse-border 1s ease-in-out 3; }
  </style>
</head>
<body class="bg-gray-100 min-h-screen">
  <!-- Header -->
  <header class="bg-indigo-600 text-white shadow-lg">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span class="text-3xl">üî¨</span>
          <div>
            <h1 class="text-2xl font-bold">Data & Analysis Department</h1>
            <p class="text-sm text-white/80">Promotion & Stock Workflows</p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <button id="start-workflow-btn" class="bg-green-500 hover:bg-green-600 text-white font-semibold px-4 py-2 rounded-lg flex items-center space-x-2 transition-colors shadow-lg">
            <span>üöÄ</span>
            <span>Promotion</span>
          </button>
          <button id="start-stock-btn" class="bg-orange-500 hover:bg-orange-600 text-white font-semibold px-4 py-2 rounded-lg flex items-center space-x-2 transition-colors shadow-lg">
            <span>üì¶</span>
            <span>Stock</span>
          </button>
          <div id="connection-status" class="flex items-center space-x-2">
            <span id="status-dot" class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></span>
            <span id="status-text" class="text-sm">Connected</span>
          </div>
          <div class="bg-white/10 px-3 py-1 rounded-full text-sm">
            <span id="task-count">0</span> pending task(s)
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Notification Container -->
  <div id="notification-container" class="fixed top-4 right-4 z-50 space-y-2"></div>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Task List -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">üìã Pending Tasks</h2>
        <div id="task-list" class="space-y-4">
          <div id="no-tasks" class="bg-white rounded-lg shadow p-8 text-center text-gray-500">
            <span class="text-4xl mb-4 block">‚è≥</span>
            <p>No pending tasks. Waiting for new tasks from Zeebe...</p>
          </div>
        </div>
      </div>

      <!-- Task Form -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">üìù Complete Task</h2>
        <div id="form-container" class="bg-white rounded-lg shadow-lg p-6">
          <div id="no-task-selected" class="text-center text-gray-500 py-8">
            <span class="text-4xl mb-4 block">üëÜ</span>
            <p>Select a task from the list to begin</p>
          </div>
          
          <!-- Promotion Form (identify-products) -->
          <form id="task-form" class="hidden space-y-6">
            <input type="hidden" id="jobKey" name="jobKey">
            
            <div class="bg-indigo-50 border border-indigo-200 rounded-lg p-4 mb-4">
              <div class="flex items-center space-x-2">
                <span class="bg-indigo-100 text-indigo-800 text-xs font-medium px-2.5 py-0.5 rounded">PROMOTION</span>
                <span class="text-sm text-indigo-600 font-medium">identify-products</span>
              </div>
              <p id="selected-job-key" class="text-lg font-mono text-indigo-800 mt-1"></p>
            </div>

            <!-- Product IDs -->
            <div>
              <label for="productIds" class="block text-sm font-medium text-gray-700 mb-2">
                Product IDs <span class="text-red-500">*</span>
              </label>
              <textarea
                id="productIds"
                name="productIds"
                rows="3"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                placeholder="Enter product IDs, comma-separated (e.g., P123, P456, P789)"
                required
              ></textarea>
              <p class="text-xs text-gray-500 mt-1">Enter product IDs to target for the promotion</p>
            </div>

            <!-- Reason for Promotion -->
            <div>
              <label for="reason" class="block text-sm font-medium text-gray-700 mb-2">
                Reason for Promotion <span class="text-red-500">*</span>
              </label>
              <select
                id="reason"
                name="reason"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500"
                required
              >
                <option value="">Select a reason...</option>
                <option value="expiring">üïê Expiring Soon</option>
                <option value="low_sales">üìâ Low Sales</option>
                <option value="overstock">üì¶ Overstock</option>
                <option value="seasonal">üå∏ Seasonal</option>
              </select>
            </div>

            <!-- Urgency Level -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Urgency Level <span class="text-red-500">*</span>
              </label>
              <div class="flex space-x-4">
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input type="radio" name="urgency" value="low" class="text-indigo-600 focus:ring-indigo-500">
                  <span class="text-sm text-gray-700">üü¢ Low</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input type="radio" name="urgency" value="medium" class="text-indigo-600 focus:ring-indigo-500" checked>
                  <span class="text-sm text-gray-700">üü° Medium</span>
                </label>
                <label class="flex items-center space-x-2 cursor-pointer">
                  <input type="radio" name="urgency" value="high" class="text-indigo-600 focus:ring-indigo-500">
                  <span class="text-sm text-gray-700">üî¥ High</span>
                </label>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="pt-4">
              <button
                type="submit"
                class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors flex items-center justify-center space-x-2"
              >
                <span>‚úÖ Complete Task</span>
              </button>
            </div>
          </form>

          <!-- Stock Form (compute-replenishment-quantity) -->
          <form id="stock-form" class="hidden space-y-6">
            <input type="hidden" id="stockJobKey" name="jobKey">
            
            <div class="bg-orange-50 border border-orange-200 rounded-lg p-4 mb-4">
              <div class="flex items-center space-x-2">
                <span class="bg-orange-100 text-orange-800 text-xs font-medium px-2.5 py-0.5 rounded">STOCK</span>
                <span class="text-sm text-orange-600 font-medium">compute-replenishment-quantity</span>
              </div>
              <p id="stock-selected-job-key" class="text-lg font-mono text-orange-800 mt-1"></p>
            </div>

            <!-- Product ID -->
            <div>
              <label for="productId" class="block text-sm font-medium text-gray-700 mb-2">
                Product ID <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="productId"
                name="productId"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                placeholder="e.g., SKU-12345"
                required
              >
            </div>

            <!-- Product Name -->
            <div>
              <label for="productName" class="block text-sm font-medium text-gray-700 mb-2">
                Product Name <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="productName"
                name="productName"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                placeholder="e.g., Premium Widget"
                required
              >
            </div>

            <!-- Current Stock & Daily Sales -->
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label for="currentStock" class="block text-sm font-medium text-gray-700 mb-2">
                  Current Stock <span class="text-red-500">*</span>
                </label>
                <input
                  type="number"
                  id="currentStock"
                  name="currentStock"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                  placeholder="0"
                  required
                >
              </div>
              <div>
                <label for="avgDailySales" class="block text-sm font-medium text-gray-700 mb-2">
                  Avg Daily Sales <span class="text-red-500">*</span>
                </label>
                <input
                  type="number"
                  id="avgDailySales"
                  name="avgDailySales"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                  placeholder="10"
                  required
                >
              </div>
            </div>

            <!-- Lead Time & Safety Stock -->
            <div class="grid grid-cols-2 gap-4">
              <div>
                <label for="leadTimeDays" class="block text-sm font-medium text-gray-700 mb-2">
                  Lead Time (days) <span class="text-red-500">*</span>
                </label>
                <input
                  type="number"
                  id="leadTimeDays"
                  name="leadTimeDays"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                  placeholder="7"
                  required
                >
              </div>
              <div>
                <label for="safetyStockDays" class="block text-sm font-medium text-gray-700 mb-2">
                  Safety Stock (days) <span class="text-red-500">*</span>
                </label>
                <input
                  type="number"
                  id="safetyStockDays"
                  name="safetyStockDays"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
                  placeholder="5"
                  required
                >
              </div>
            </div>

            <!-- Submit Button -->
            <div class="pt-4">
              <button
                type="submit"
                class="w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors flex items-center justify-center space-x-2"
              >
                <span>üìä Calculate & Complete</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script>
    const socket = io();
    const tasks = new Map();
    let selectedJobKey = null;
    let selectedTaskType = null;

    // DOM elements
    const taskList = document.getElementById('task-list');
    const noTasks = document.getElementById('no-tasks');
    const taskForm = document.getElementById('task-form');
    const stockForm = document.getElementById('stock-form');
    const noTaskSelected = document.getElementById('no-task-selected');
    const taskCount = document.getElementById('task-count');
    const notificationContainer = document.getElementById('notification-container');
    const startWorkflowBtn = document.getElementById('start-workflow-btn');
    const startStockBtn = document.getElementById('start-stock-btn');

    // Start Promotion Workflow button handler
    startWorkflowBtn.addEventListener('click', async function() {
      startWorkflowBtn.disabled = true;
      startWorkflowBtn.innerHTML = '<span>‚è≥</span><span>Starting...</span>';
      
      try {
        const response = await fetch('/start-workflow', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ reason: 'Triggered from Data Analysis Web UI' })
        });
        
        const data = await response.json();
        
        if (data.success) {
          showNotification('Promotion workflow started! #' + data.processInstanceKey.toString().substring(0, 8) + '...', 'success');
        } else {
          showNotification('Failed to start workflow: ' + data.error, 'error');
        }
      } catch (error) {
        showNotification('Error starting workflow: ' + error.message, 'error');
      } finally {
        startWorkflowBtn.disabled = false;
        startWorkflowBtn.innerHTML = '<span>üöÄ</span><span>Promotion</span>';
      }
    });

    // Start Stock Workflow button handler
    startStockBtn.addEventListener('click', async function() {
      startStockBtn.disabled = true;
      startStockBtn.innerHTML = '<span>‚è≥</span><span>Starting...</span>';
      
      try {
        const response = await fetch('/start-stock-workflow', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ reason: 'Stock replenishment from Data Analysis Web UI' })
        });
        
        const data = await response.json();
        
        if (data.success) {
          showNotification('Stock workflow started! #' + data.processInstanceKey.toString().substring(0, 8) + '...', 'success');
        } else {
          showNotification('Failed to start stock workflow: ' + data.error, 'error');
        }
      } catch (error) {
        showNotification('Error starting stock workflow: ' + error.message, 'error');
      } finally {
        startStockBtn.disabled = false;
        startStockBtn.innerHTML = '<span>üì¶</span><span>Stock</span>';
      }
    });

    // Update task count
    function updateTaskCount() {
      taskCount.textContent = tasks.size;
      noTasks.classList.toggle('hidden', tasks.size > 0);
    }

    // Show notification
    function showNotification(message, type = 'info') {
      var colors = { success: 'bg-green-500', error: 'bg-red-500', warning: 'bg-yellow-500', info: 'bg-indigo-500' };
      var icons = { success: '‚úÖ', error: '‚ùå', warning: '‚ö†Ô∏è', info: 'üì•' };
      
      var notification = document.createElement('div');
      notification.className = 'notification-enter ' + colors[type] + ' text-white px-4 py-3 rounded-lg shadow-lg flex items-center space-x-2 min-w-[300px]';
      notification.innerHTML = 
        '<span class="text-xl">' + icons[type] + '</span>' +
        '<span class="flex-1">' + message + '</span>' +
        '<button onclick="this.parentElement.remove()" class="text-white/80 hover:text-white">‚úï</button>';
      
      notificationContainer.appendChild(notification);
      setTimeout(function() {
        notification.classList.replace('notification-enter', 'notification-exit');
        setTimeout(function() { notification.remove(); }, 300);
      }, 5000);
    }

    // Render task card based on task type
    function renderTaskCard(task) {
      var card = document.createElement('div');
      card.id = 'task-' + task.jobKey;
      
      var isStock = task.taskType === 'compute-replenishment-quantity';
      var borderColor = isStock ? 'border-orange-500' : 'border-indigo-500';
      var badgeBg = isStock ? 'bg-orange-100 text-orange-800' : 'bg-indigo-100 text-indigo-800';
      var btnBg = isStock ? 'bg-orange-500 hover:bg-orange-600' : 'bg-indigo-500 hover:bg-indigo-600';
      var taskLabel = isStock ? 'compute-replenishment-quantity' : 'identify-products';
      var taskTitle = isStock ? 'Stock Replenishment Analysis' : 'Product Identification Task';
      var workflowBadge = isStock ? '<span class="bg-orange-200 text-orange-900 text-xs px-1.5 py-0.5 rounded mr-2">STOCK</span>' : '<span class="bg-indigo-200 text-indigo-900 text-xs px-1.5 py-0.5 rounded mr-2">PROMO</span>';
      
      card.className = 'bg-white rounded-lg shadow-md border-l-4 ' + borderColor + ' p-4 task-new cursor-pointer hover:shadow-lg transition-shadow';
      card.setAttribute('data-task-type', task.taskType);
      card.innerHTML = 
        '<div class="flex items-start justify-between">' +
          '<div>' +
            '<div class="flex items-center space-x-2 mb-2">' +
              workflowBadge +
              '<span class="' + badgeBg + ' text-xs font-medium px-2.5 py-0.5 rounded">' + taskLabel + '</span>' +
            '</div>' +
            '<h3 class="font-semibold text-gray-800">' + taskTitle + '</h3>' +
            '<p class="text-sm text-gray-500 mt-1">Job Key: ' + task.jobKey.substring(0, 16) + '...</p>' +
          '</div>' +
          '<span class="text-xs text-gray-400">' + new Date().toLocaleTimeString() + '</span>' +
        '</div>' +
        '<div class="mt-4">' +
          '<button data-job-key="' + task.jobKey + '" data-task-type="' + task.taskType + '" class="select-task-btn w-full ' + btnBg + ' text-white text-sm font-medium px-4 py-2 rounded transition-colors">' +
            'Work on this task' +
          '</button>' +
        '</div>';
      return card;
    }

    // Event delegation for task buttons
    taskList.addEventListener('click', function(e) {
      var btn = e.target.closest('.select-task-btn');
      if (btn) {
        selectTask(btn.dataset.jobKey, btn.dataset.taskType);
      }
    });

    // Select task and show appropriate form
    function selectTask(jobKey, taskType) {
      selectedJobKey = jobKey;
      selectedTaskType = taskType || tasks.get(jobKey)?.taskType || 'identify-products';
      
      // Hide all forms first
      taskForm.classList.add('hidden');
      stockForm.classList.add('hidden');
      noTaskSelected.classList.add('hidden');
      
      // Show appropriate form
      if (selectedTaskType === 'compute-replenishment-quantity') {
        document.getElementById('stockJobKey').value = jobKey;
        document.getElementById('stock-selected-job-key').textContent = '#' + jobKey.substring(0, 16) + '...';
        stockForm.classList.remove('hidden');
      } else {
        document.getElementById('jobKey').value = jobKey;
        document.getElementById('selected-job-key').textContent = '#' + jobKey.substring(0, 16) + '...';
        taskForm.classList.remove('hidden');
      }
      
      // Highlight selected task
      document.querySelectorAll('[id^="task-"]').forEach(function(el) {
        el.classList.remove('ring-2', 'ring-indigo-500', 'ring-orange-500');
      });
      var taskEl = document.getElementById('task-' + jobKey);
      if (taskEl) {
        var ringColor = selectedTaskType === 'compute-replenishment-quantity' ? 'ring-orange-500' : 'ring-indigo-500';
        taskEl.classList.add('ring-2', ringColor);
      }
    }

    // Hide all forms helper
    function hideAllForms() {
      taskForm.classList.add('hidden');
      stockForm.classList.add('hidden');
      noTaskSelected.classList.remove('hidden');
      selectedJobKey = null;
      selectedTaskType = null;
    }

    // Socket events
    socket.on('connect', function() {
      document.getElementById('status-dot').classList.add('bg-green-400');
      document.getElementById('status-dot').classList.remove('bg-red-400');
      document.getElementById('status-text').textContent = 'Connected';
    });

    socket.on('disconnect', function() {
      document.getElementById('status-dot').classList.remove('bg-green-400');
      document.getElementById('status-dot').classList.add('bg-red-400');
      document.getElementById('status-text').textContent = 'Disconnected';
    });

    socket.on('initial-tasks', function(initialTasks) {
      initialTasks.forEach(function(task) {
        if (!tasks.has(task.jobKey)) {
          tasks.set(task.jobKey, task);
          var card = renderTaskCard(task);
          taskList.appendChild(card);
        }
      });
      updateTaskCount();
    });

    socket.on('new-task', function(task) {
      if (tasks.has(task.jobKey)) {
        console.log('Task already exists, skipping:', task.jobKey);
        return;
      }
      tasks.set(task.jobKey, task);
      var card = renderTaskCard(task);
      taskList.insertBefore(card, taskList.firstChild);
      updateTaskCount();
      var msg = task.taskType === 'compute-replenishment-quantity' ? 'New stock task received!' : 'New promotion task received!';
      showNotification(msg, 'info');
    });

    socket.on('task-completed', function(data) {
      tasks.delete(data.jobKey);
      var taskEl = document.getElementById('task-' + data.jobKey);
      if (taskEl) taskEl.remove();
      updateTaskCount();
      
      if (selectedJobKey === data.jobKey) {
        hideAllForms();
        taskForm.reset();
        stockForm.reset();
      }
    });

    // Promotion Form submission
    taskForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      var formData = new FormData(taskForm);
      var data = {
        jobKey: formData.get('jobKey'),
        productIds: formData.get('productIds'),
        reason: formData.get('reason'),
        urgency: formData.get('urgency')
      };

      try {
        var response = await fetch('/complete-task', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        var result = await response.json();
        
        if (result.success) {
          showNotification('Promotion task completed!', 'success');
          taskForm.reset();
          hideAllForms();
        } else {
          showNotification(result.error || 'Failed to complete task', 'error');
        }
      } catch (error) {
        showNotification('Error: ' + error.message, 'error');
      }
    });

    // Stock Form submission
    stockForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      
      var formData = new FormData(stockForm);
      var data = {
        jobKey: formData.get('jobKey'),
        productId: formData.get('productId'),
        productName: formData.get('productName'),
        currentStock: formData.get('currentStock'),
        avgDailySales: formData.get('avgDailySales'),
        leadTimeDays: formData.get('leadTimeDays'),
        safetyStockDays: formData.get('safetyStockDays')
      };

      try {
        var response = await fetch('/complete-stock-task', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        var result = await response.json();
        
        if (result.success) {
          showNotification('Stock analysis completed! Recommended qty: ' + result.result.recommendedQuantity, 'success');
          stockForm.reset();
          hideAllForms();
        } else {
          showNotification(result.error || 'Failed to complete stock task', 'error');
        }
      } catch (error) {
        showNotification('Error: ' + error.message, 'error');
      }
    });
  </script>
</body>
</html>
