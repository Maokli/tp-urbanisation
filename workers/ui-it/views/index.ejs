<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>IT Department | Workflow System</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/socket.io/socket.io.js"></script>
  <style>
    @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
    @keyframes slideOut { from { transform: translateX(0); opacity: 1; } to { transform: translateX(100%); opacity: 0; } }
    @keyframes pulse-border { 0%, 100% { box-shadow: 0 0 0 0 rgba(59, 130, 246, 0.4); } 50% { box-shadow: 0 0 0 8px rgba(59, 130, 246, 0); } }
    .notification-enter { animation: slideIn 0.3s ease-out forwards; }
    .notification-exit { animation: slideOut 0.3s ease-in forwards; }
    .task-new { animation: pulse-border 1s ease-in-out 3; }
  </style>
</head>
<body class="bg-gray-100 min-h-screen">
  <!-- Header -->
  <header class="bg-blue-600 text-white shadow-lg">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span class="text-3xl">üíª</span>
          <div>
            <h1 class="text-2xl font-bold">IT Department</h1>
            <p class="text-sm text-white/80">System Updates for Promotions & Stock</p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <div id="connection-status" class="flex items-center space-x-2">
            <span id="status-dot" class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></span>
            <span id="status-text" class="text-sm">Connected</span>
          </div>
          <div class="bg-white/10 px-3 py-1 rounded-full text-sm">
            <span id="task-count">0</span> pending task(s)
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Notification Container -->
  <div id="notification-container" class="fixed top-4 right-4 z-50 space-y-2"></div>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Task List -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">üìã Pending System Updates</h2>
        <div id="task-list" class="space-y-4">
          <div id="no-tasks" class="bg-white rounded-lg shadow p-8 text-center text-gray-500">
            <span class="text-4xl mb-4 block">‚è≥</span>
            <p>No pending updates. Waiting for new tasks from Zeebe...</p>
          </div>
        </div>
      </div>

      <!-- Task Form -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">üñ•Ô∏è System Update Confirmation</h2>
        <div id="form-container" class="bg-white rounded-lg shadow-lg p-6">
          <div id="no-task-selected" class="text-center text-gray-500 py-8">
            <span class="text-4xl mb-4 block">üëÜ</span>
            <p>Select a task from the list to update systems</p>
          </div>
          
          <form id="task-form" class="hidden space-y-6">
            <input type="hidden" id="jobKey" name="jobKey">
            
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-4">
              <p class="text-sm text-blue-600 font-medium">Updating Systems For:</p>
              <p id="selected-job-key" class="text-lg font-mono text-blue-800"></p>
            </div>

            <!-- Update Requirements -->
            <div id="update-details" class="bg-gray-50 rounded-lg p-4 space-y-2">
              <h3 class="font-semibold text-gray-700 mb-3">üìã Update Requirements</h3>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <span class="text-gray-500">Products:</span>
                  <span id="detail-products" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">New Discount:</span>
                  <span id="detail-discount" class="ml-2 font-medium">-</span>
                </div>
              </div>
            </div>

            <!-- System Updates -->
            <div class="space-y-4">
              <h3 class="font-semibold text-gray-700">üîß System Updates</h3>
              
              <!-- POS System -->
              <div class="border border-gray-200 rounded-lg p-4 bg-white">
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" id="posUpdated" name="posUpdated" value="true" class="w-5 h-5 text-blue-600 rounded">
                  <span class="text-2xl">üè™</span>
                  <div>
                    <span class="font-medium text-gray-800">POS Terminals Updated</span>
                    <p class="text-xs text-gray-500">Point of Sale systems</p>
                  </div>
                </label>
                <div id="pos-terminals" class="mt-3 ml-10 hidden">
                  <label class="block text-sm text-gray-600 mb-1">Number of POS terminals:</label>
                  <input type="number" name="terminalCount" value="25" min="0" 
                    class="w-32 px-3 py-1 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500">
                </div>
              </div>

              <!-- ERP System -->
              <div class="border border-gray-200 rounded-lg p-4 bg-white">
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" name="erpUpdated" value="true" class="w-5 h-5 text-blue-600 rounded">
                  <span class="text-2xl">üè¢</span>
                  <div>
                    <span class="font-medium text-gray-800">ERP System Updated</span>
                    <p class="text-xs text-gray-500">SAP / Enterprise Resource Planning</p>
                  </div>
                </label>
              </div>

              <!-- E-commerce -->
              <div class="border border-gray-200 rounded-lg p-4 bg-white">
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" name="ecomUpdated" value="true" class="w-5 h-5 text-blue-600 rounded">
                  <span class="text-2xl">üõí</span>
                  <div>
                    <span class="font-medium text-gray-800">E-Commerce Platform Updated</span>
                    <p class="text-xs text-gray-500">Website & Mobile App</p>
                  </div>
                </label>
              </div>

              <!-- Inventory System -->
              <div class="border border-gray-200 rounded-lg p-4 bg-white">
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" name="inventoryUpdated" value="true" class="w-5 h-5 text-blue-600 rounded">
                  <span class="text-2xl">üì¶</span>
                  <div>
                    <span class="font-medium text-gray-800">Inventory System Updated</span>
                    <p class="text-xs text-gray-500">Warehouse & Stock Management</p>
                  </div>
                </label>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="pt-4">
              <button
                type="submit"
                class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors flex items-center justify-center space-x-2"
              >
                <span>‚úÖ Confirm System Updates</span>
              </button>
            </div>
          </form>
          
          <!-- Stock Systems Update Form -->
          <form id="stock-task-form" class="hidden space-y-6">
            <input type="hidden" id="stockJobKey" name="jobKey">
            
            <div class="bg-orange-50 border border-orange-200 rounded-lg p-4 mb-4">
              <p class="text-sm text-orange-600 font-medium">üì¶ Updating Stock Systems For:</p>
              <p id="stock-selected-job-key" class="text-lg font-mono text-orange-800"></p>
            </div>

            <!-- Stock Details -->
            <div class="bg-gray-50 rounded-lg p-4 space-y-2">
              <h3 class="font-semibold text-gray-700 mb-3">üì¶ Stock Update Details</h3>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <span class="text-gray-500">Product:</span>
                  <span id="stock-detail-product" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">Quantity Received:</span>
                  <span id="stock-detail-quantity" class="ml-2 font-medium">-</span>
                </div>
              </div>
            </div>

            <!-- Stock System Updates -->
            <div class="space-y-4">
              <h3 class="font-semibold text-gray-700">üîß Stock System Updates</h3>
              
              <!-- ERP Stock Module -->
              <div class="border border-gray-200 rounded-lg p-4 bg-white">
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" name="erpUpdated" value="true" class="w-5 h-5 text-orange-600 rounded" checked>
                  <span class="text-2xl">üè¢</span>
                  <div>
                    <span class="font-medium text-gray-800">ERP Stock Module</span>
                    <p class="text-xs text-gray-500">SAP MM Stock Management</p>
                  </div>
                </label>
              </div>

              <!-- WMS System -->
              <div class="border border-gray-200 rounded-lg p-4 bg-white">
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" name="wmsUpdated" value="true" class="w-5 h-5 text-orange-600 rounded" checked>
                  <span class="text-2xl">üè≠</span>
                  <div>
                    <span class="font-medium text-gray-800">WMS Updated</span>
                    <p class="text-xs text-gray-500">Warehouse Management System</p>
                  </div>
                </label>
              </div>

              <!-- POS Stock Sync -->
              <div class="border border-gray-200 rounded-lg p-4 bg-white">
                <label class="flex items-center space-x-3 cursor-pointer">
                  <input type="checkbox" name="posUpdated" value="true" class="w-5 h-5 text-orange-600 rounded" checked>
                  <span class="text-2xl">üè™</span>
                  <div>
                    <span class="font-medium text-gray-800">POS Stock Levels Synced</span>
                    <p class="text-xs text-gray-500">Point of Sale stock counts</p>
                  </div>
                </label>
              </div>
            </div>

            <!-- Notes -->
            <div>
              <label for="stockNotes" class="block text-sm font-medium text-gray-700 mb-2">
                Update Notes
              </label>
              <textarea
                id="stockNotes"
                name="notes"
                rows="2"
                placeholder="Optional notes about this stock system update..."
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
              ></textarea>
            </div>

            <!-- Submit Button -->
            <div class="pt-4">
              <button
                type="submit"
                class="w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors flex items-center justify-center space-x-2"
              >
                <span>‚úÖ Confirm Stock System Updates</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script>
    const socket = io();
    const tasks = new Map();
    let selectedJobKey = null;

    const taskList = document.getElementById('task-list');
    const noTasks = document.getElementById('no-tasks');
    const taskForm = document.getElementById('task-form');
    const stockTaskForm = document.getElementById('stock-task-form');
    const noTaskSelected = document.getElementById('no-task-selected');
    const taskCount = document.getElementById('task-count');
    const notificationContainer = document.getElementById('notification-container');

    // Toggle POS terminals count field
    document.getElementById('posUpdated').addEventListener('change', function() {
      document.getElementById('pos-terminals').classList.toggle('hidden', !this.checked);
    });

    function updateTaskCount() {
      taskCount.textContent = tasks.size;
      noTasks.classList.toggle('hidden', tasks.size > 0);
    }

    function showNotification(message, type = 'info') {
      const colors = { success: 'bg-green-500', error: 'bg-red-500', warning: 'bg-yellow-500', info: 'bg-blue-500' };
      const icons = { success: '‚úÖ', error: '‚ùå', warning: '‚ö†Ô∏è', info: 'üì•' };
      
      const notification = document.createElement('div');
      notification.className = `notification-enter ${colors[type]} text-white px-4 py-3 rounded-lg shadow-lg flex items-center space-x-2 min-w-[300px]`;
      notification.innerHTML = `
        <span class="text-xl">${icons[type]}</span>
        <span class="flex-1">${message}</span>
        <button onclick="this.parentElement.remove()" class="text-white/80 hover:text-white">‚úï</button>
      `;
      
      notificationContainer.appendChild(notification);
      setTimeout(() => {
        notification.classList.replace('notification-enter', 'notification-exit');
        setTimeout(() => notification.remove(), 300);
      }, 5000);
    }

    function renderTaskCard(task) {
      const card = document.createElement('div');
      card.id = 'task-' + task.jobKey;
      
      const isStock = task.taskType === 'update-stock-systems';
      const borderColor = isStock ? 'border-orange-500' : 'border-blue-500';
      
      card.className = 'bg-white rounded-lg shadow-md border-l-4 ' + borderColor + ' p-4 task-new cursor-pointer hover:shadow-lg transition-shadow';
      
      const vars = task.variables || {};
      
      let badgeHtml, titleHtml, detailsHtml;
      
      if (isStock) {
        badgeHtml = '<span class="bg-orange-100 text-orange-800 text-xs font-medium px-2.5 py-0.5 rounded">üì¶ update-stock-systems</span>';
        titleHtml = 'Update Stock Systems';
        const productName = vars.productName || vars.productId || 'Unknown';
        const qty = vars.quantityReceived || vars.orderQuantity || '-';
        detailsHtml = 'Product: ' + productName + ' | Qty: ' + qty + ' units';
      } else {
        var discountText = vars.discountPercentage ? 'Apply ' + vars.discountPercentage + '% discount' : 'New price update';
        var productsText = vars.targetProducts ? ' to ' + vars.targetProducts.length + ' products' : '';
        badgeHtml = '<span class="bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded">üìä update-system-prices</span>';
        titleHtml = 'Update System Prices';
        detailsHtml = discountText + productsText;
      }
      
      const btnColor = isStock ? 'bg-orange-500 hover:bg-orange-600' : 'bg-blue-500 hover:bg-blue-600';
      const btnText = isStock ? 'Update stock systems' : 'Update systems';
      
      card.innerHTML = 
        '<div class="flex items-start justify-between">' +
          '<div>' +
            '<div class="flex items-center space-x-2 mb-2">' + badgeHtml + '</div>' +
            '<h3 class="font-semibold text-gray-800">' + titleHtml + '</h3>' +
            '<p class="text-sm text-gray-500 mt-1">' + detailsHtml + '</p>' +
          '</div>' +
          '<span class="text-xs text-gray-400">' + new Date().toLocaleTimeString() + '</span>' +
        '</div>' +
        '<div class="mt-4">' +
          '<button data-job-key="' + task.jobKey + '" class="select-task-btn w-full ' + btnColor + ' text-white text-sm font-medium px-4 py-2 rounded transition-colors">' +
            btnText +
          '</button>' +
        '</div>';
      return card;
    }

    // Event delegation for task buttons
    taskList.addEventListener('click', function(e) {
      const btn = e.target.closest('.select-task-btn');
      if (btn) {
        selectTask(btn.dataset.jobKey);
      }
    });

    function selectTask(jobKey) {
      selectedJobKey = jobKey;
      const task = tasks.get(jobKey);
      const vars = task && task.variables ? task.variables : {};
      const isStock = task && task.taskType === 'update-stock-systems';
      
      // Hide both forms first
      taskForm.classList.add('hidden');
      stockTaskForm.classList.add('hidden');
      noTaskSelected.classList.add('hidden');
      
      if (isStock) {
        // Stock systems form
        document.getElementById('stockJobKey').value = jobKey;
        document.getElementById('stock-selected-job-key').textContent = '#' + jobKey.substring(0, 16) + '...';
        
        document.getElementById('stock-detail-product').textContent = vars.productName || vars.productId || 'N/A';
        document.getElementById('stock-detail-quantity').textContent = (vars.quantityReceived || vars.orderQuantity || '-') + ' units';
        
        stockTaskForm.classList.remove('hidden');
      } else {
        // Promotion prices form
        document.getElementById('jobKey').value = jobKey;
        document.getElementById('selected-job-key').textContent = '#' + jobKey.substring(0, 16) + '...';
        
        document.getElementById('detail-products').textContent = vars.targetProducts ? JSON.stringify(vars.targetProducts) : 'N/A';
        document.getElementById('detail-discount').textContent = vars.discountPercentage ? vars.discountPercentage + '%' : 'N/A';
        
        taskForm.classList.remove('hidden');
      }
      
      document.querySelectorAll('[id^="task-"]').forEach(el => {
        el.classList.remove('ring-2', 'ring-blue-500', 'ring-orange-500');
      });
      var taskEl = document.getElementById('task-' + jobKey);
      if (taskEl) {
        taskEl.classList.add('ring-2', isStock ? 'ring-orange-500' : 'ring-blue-500');
      }
    }

    // Socket events
    socket.on('connect', () => {
      document.getElementById('status-dot').classList.add('bg-green-400');
      document.getElementById('status-text').textContent = 'Connected';
    });

    socket.on('disconnect', () => {
      document.getElementById('status-dot').classList.remove('bg-green-400');
      document.getElementById('status-dot').classList.add('bg-red-400');
      document.getElementById('status-text').textContent = 'Disconnected';
    });

    socket.on('initial-tasks', (initialTasks) => {
      initialTasks.forEach(task => {
        if (!tasks.has(task.jobKey)) {
          tasks.set(task.jobKey, task);
          taskList.appendChild(renderTaskCard(task));
        }
      });
      updateTaskCount();
    });

    socket.on('new-task', (task) => {
      if (tasks.has(task.jobKey)) {
        console.log('Task already exists, skipping:', task.jobKey);
        return;
      }
      tasks.set(task.jobKey, task);
      taskList.insertBefore(renderTaskCard(task), taskList.firstChild);
      updateTaskCount();
      const isStock = task.taskType === 'update-stock-systems';
      showNotification(isStock ? 'New stock system update request!' : 'New system update request received!', 'info');
    });

    socket.on('task-completed', (data) => {
      tasks.delete(data.jobKey);
      var taskEl = document.getElementById('task-' + data.jobKey);
      if (taskEl) taskEl.remove();
      updateTaskCount();
      
      if (selectedJobKey === data.jobKey) {
        taskForm.classList.add('hidden');
        stockTaskForm.classList.add('hidden');
        noTaskSelected.classList.remove('hidden');
        selectedJobKey = null;
        taskForm.reset();
        stockTaskForm.reset();
        document.getElementById('pos-terminals').classList.add('hidden');
      }
    });

    // Promotion form submission
    taskForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(taskForm);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch('/complete-task', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();
        
        if (result.success) {
          showNotification('All systems updated successfully! ‚úÖ', 'success');
          taskForm.reset();
          taskForm.classList.add('hidden');
          noTaskSelected.classList.remove('hidden');
          document.getElementById('pos-terminals').classList.add('hidden');
        } else {
          showNotification(result.error || 'Failed to complete task', 'error');
        }
      } catch (error) {
        showNotification('Error: ' + error.message, 'error');
      }
    });

    // Stock form submission
    stockTaskForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(stockTaskForm);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch('/complete-stock-task', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();
        
        if (result.success) {
          showNotification('Stock systems updated successfully! üì¶', 'success');
          stockTaskForm.reset();
          stockTaskForm.classList.add('hidden');
          noTaskSelected.classList.remove('hidden');
        } else {
          showNotification(result.error || 'Failed to complete task', 'error');
        }
      } catch (error) {
        showNotification('Error: ' + error.message, 'error');
      }
    });
  </script>
</body>
</html>
