<div class="task-card bg-white rounded-lg shadow-md border-l-4 border-<%= deptColor || 'blue' %>-500 p-4 mb-4 task-new" data-job-key="<%= jobKey %>">
  <div class="flex items-start justify-between">
    <div>
      <div class="flex items-center space-x-2 mb-2">
        <span class="bg-<%= deptColor || 'blue' %>-100 text-<%= deptColor || 'blue' %>-800 text-xs font-medium px-2.5 py-0.5 rounded">
          <%= taskType %>
        </span>
        <span class="text-gray-400 text-xs">
          Job #<%= jobKey.substring(0, 8) %>...
        </span>
      </div>
      <h3 class="font-semibold text-gray-800"><%= title %></h3>
      <p class="text-sm text-gray-500 mt-1"><%= description %></p>
    </div>
    <span class="text-xs text-gray-400">
      <%= new Date().toLocaleTimeString() %>
    </span>
  </div>
  
  <% if (variables && Object.keys(variables).length > 0) { %>
  <div class="mt-3 pt-3 border-t border-gray-100">
    <p class="text-xs font-medium text-gray-500 mb-2">Task Variables:</p>
    <div class="bg-gray-50 rounded p-2 text-xs font-mono text-gray-600 max-h-32 overflow-auto">
      <%= JSON.stringify(variables, null, 2) %>
    </div>
  </div>
  <% } %>
  
  <div class="mt-4 flex justify-end">
    <button onclick="selectTask('<%= jobKey %>')" class="bg-<%= deptColor || 'blue' %>-500 hover:bg-<%= deptColor || 'blue' %>-600 text-white text-sm font-medium px-4 py-2 rounded transition-colors">
      Work on this task
    </button>
  </div>
</div>
