<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Commercial & Purchasing Department | Product Promotion System</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/socket.io/socket.io.js"></script>
  <style>
    @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
    @keyframes slideOut { from { transform: translateX(0); opacity: 1; } to { transform: translateX(100%); opacity: 0; } }
    @keyframes pulse-border { 0%, 100% { box-shadow: 0 0 0 0 rgba(245, 158, 11, 0.4); } 50% { box-shadow: 0 0 0 8px rgba(245, 158, 11, 0); } }
    .notification-enter { animation: slideIn 0.3s ease-out forwards; }
    .notification-exit { animation: slideOut 0.3s ease-in forwards; }
    .task-new { animation: pulse-border 1s ease-in-out 3; }
  </style>
</head>
<body class="bg-gray-100 min-h-screen">
  <!-- Header -->
  <header class="bg-amber-600 text-white shadow-lg">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span class="text-3xl">üõí</span>
          <div>
            <h1 class="text-2xl font-bold">Commercial & Purchasing Department</h1>
            <p class="text-sm text-white/80">Product Promotion Workflow</p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <div id="connection-status" class="flex items-center space-x-2">
            <span id="status-dot" class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></span>
            <span id="status-text" class="text-sm">Connected</span>
          </div>
          <div class="bg-white/10 px-3 py-1 rounded-full text-sm">
            <span id="task-count">0</span> pending task(s)
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Notification Container -->
  <div id="notification-container" class="fixed top-4 right-4 z-50 space-y-2"></div>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Task List -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">üìã Pending Tasks</h2>
        <div id="task-list" class="space-y-4">
          <div id="no-tasks" class="bg-white rounded-lg shadow p-8 text-center text-gray-500">
            <span class="text-4xl mb-4 block">‚è≥</span>
            <p>No pending tasks. Waiting for new tasks from Zeebe...</p>
          </div>
        </div>
      </div>

      <!-- Task Form -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">üìù Complete Task</h2>
        <div id="form-container" class="bg-white rounded-lg shadow-lg p-6">
          <div id="no-task-selected" class="text-center text-gray-500 py-8">
            <span class="text-4xl mb-4 block">üëÜ</span>
            <p>Select a task from the list to begin</p>
          </div>
          
          <!-- Propose Promotion Form -->
          <form id="form-propose-promotion" class="hidden space-y-6">
            <input type="hidden" name="jobKey" class="jobKey">
            
            <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-4">
              <p class="text-sm text-amber-600 font-medium">Task Type: Propose Promotion</p>
              <p class="selected-job-key text-lg font-mono text-amber-800"></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Discount Percentage <span class="text-red-500">*</span>
              </label>
              <div class="flex items-center space-x-4">
                <input type="range" name="discount" min="5" max="50" value="20" class="flex-1" 
                       oninput="this.nextElementSibling.textContent = this.value + '%'">
                <span class="text-lg font-semibold text-amber-600 w-16">20%</span>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Promotional Text <span class="text-red-500">*</span>
              </label>
              <textarea name="promoText" rows="2" required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500"
                placeholder="e.g., 30% OFF THIS WEEK!"></textarea>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Duration (days) <span class="text-red-500">*</span>
              </label>
              <input type="number" name="durationDays" value="7" min="1" max="30" required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500">
            </div>

            <button type="submit" class="w-full bg-amber-600 hover:bg-amber-700 text-white font-semibold py-3 px-6 rounded-lg">
              ‚úÖ Complete Task
            </button>
          </form>

          <!-- Prepare In-Store Form -->
          <form id="form-prepare-instore-update" class="hidden space-y-6">
            <input type="hidden" name="jobKey" class="jobKey">
            
            <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-4">
              <p class="text-sm text-amber-600 font-medium">Task Type: Prepare In-Store Update</p>
              <p class="selected-job-key text-lg font-mono text-amber-800"></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Store IDs <span class="text-red-500">*</span>
              </label>
              <textarea name="storeIds" rows="3" required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500"
                placeholder="Enter store IDs, comma-separated (e.g., S001, S002, S003)"></textarea>
            </div>

            <div>
              <label class="flex items-center space-x-3 cursor-pointer">
                <input type="checkbox" name="labelsReady" value="true" class="w-5 h-5 text-amber-600 rounded">
                <span class="text-gray-700">Price labels are printed and ready</span>
              </label>
            </div>

            <button type="submit" class="w-full bg-amber-600 hover:bg-amber-700 text-white font-semibold py-3 px-6 rounded-lg">
              ‚úÖ Complete Task
            </button>
          </form>

          <!-- Update Physical Prices Form -->
          <form id="form-update-physical-prices" class="hidden space-y-6">
            <input type="hidden" name="jobKey" class="jobKey">
            
            <div class="bg-amber-50 border border-amber-200 rounded-lg p-4 mb-4">
              <p class="text-sm text-amber-600 font-medium">Task Type: Update Physical Prices</p>
              <p class="selected-job-key text-lg font-mono text-amber-800"></p>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Number of Labels Updated <span class="text-red-500">*</span>
              </label>
              <input type="number" name="labelsUpdated" value="0" min="0" required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-amber-500">
            </div>

            <div>
              <label class="flex items-center space-x-3 cursor-pointer">
                <input type="checkbox" name="allStoresCompleted" value="true" class="w-5 h-5 text-amber-600 rounded">
                <span class="text-gray-700">All stores completed</span>
              </label>
            </div>

            <button type="submit" class="w-full bg-amber-600 hover:bg-amber-700 text-white font-semibold py-3 px-6 rounded-lg">
              ‚úÖ Complete Task
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script>
    const socket = io();
    const tasks = new Map();
    let selectedJobKey = null;
    let selectedTaskType = null;

    const taskList = document.getElementById('task-list');
    const noTasks = document.getElementById('no-tasks');
    const noTaskSelected = document.getElementById('no-task-selected');
    const taskCount = document.getElementById('task-count');
    const notificationContainer = document.getElementById('notification-container');

    const taskTypeLabels = {
      'propose-promotion': 'üí∞ Propose Promotion',
      'prepare-instore-update': 'üè™ Prepare In-Store',
      'update-physical-prices': 'üè∑Ô∏è Update Physical Prices'
    };

    function updateTaskCount() {
      taskCount.textContent = tasks.size;
      noTasks.classList.toggle('hidden', tasks.size > 0);
    }

    function showNotification(message, type = 'info') {
      const colors = { success: 'bg-green-500', error: 'bg-red-500', warning: 'bg-yellow-500', info: 'bg-amber-500' };
      const icons = { success: '‚úÖ', error: '‚ùå', warning: '‚ö†Ô∏è', info: 'üì•' };
      
      const notification = document.createElement('div');
      notification.className = `notification-enter ${colors[type]} text-white px-4 py-3 rounded-lg shadow-lg flex items-center space-x-2 min-w-[300px]`;
      notification.innerHTML = `
        <span class="text-xl">${icons[type]}</span>
        <span class="flex-1">${message}</span>
        <button onclick="this.parentElement.remove()" class="text-white/80 hover:text-white">‚úï</button>
      `;
      
      notificationContainer.appendChild(notification);
      setTimeout(() => {
        notification.classList.replace('notification-enter', 'notification-exit');
        setTimeout(() => notification.remove(), 300);
      }, 5000);
    }

    function renderTaskCard(task) {
      const card = document.createElement('div');
      card.id = 'task-' + task.jobKey;
      card.className = 'bg-white rounded-lg shadow-md border-l-4 border-amber-500 p-4 task-new cursor-pointer hover:shadow-lg transition-shadow';
      card.innerHTML = 
        '<div class="flex items-start justify-between">' +
          '<div>' +
            '<div class="flex items-center space-x-2 mb-2">' +
              '<span class="bg-amber-100 text-amber-800 text-xs font-medium px-2.5 py-0.5 rounded">' + task.taskType + '</span>' +
            '</div>' +
            '<h3 class="font-semibold text-gray-800">' + (taskTypeLabels[task.taskType] || task.taskType) + '</h3>' +
            '<p class="text-sm text-gray-500 mt-1">Job Key: ' + task.jobKey.substring(0, 16) + '...</p>' +
          '</div>' +
          '<span class="text-xs text-gray-400">' + new Date().toLocaleTimeString() + '</span>' +
        '</div>' +
        '<div class="mt-4">' +
          '<button data-job-key="' + task.jobKey + '" data-task-type="' + task.taskType + '" class="select-task-btn w-full bg-amber-500 hover:bg-amber-600 text-white text-sm font-medium px-4 py-2 rounded transition-colors">' +
            'Work on this task' +
          '</button>' +
        '</div>';
      return card;
    }

    // Event delegation for task buttons
    taskList.addEventListener('click', function(e) {
      const btn = e.target.closest('.select-task-btn');
      if (btn) {
        const jobKey = btn.dataset.jobKey;
        const taskType = btn.dataset.taskType;
        selectTask(jobKey, taskType);
      }
    });

    function selectTask(jobKey, taskType) {
      console.log('selectTask called:', jobKey, taskType);
      selectedJobKey = jobKey;
      selectedTaskType = taskType;
      
      // Hide all forms (be specific to avoid matching form-container)
      document.getElementById('form-propose-promotion').classList.add('hidden');
      document.getElementById('form-prepare-instore-update').classList.add('hidden');
      document.getElementById('form-update-physical-prices').classList.add('hidden');
      noTaskSelected.classList.add('hidden');
      
      // Show appropriate form
      const form = document.getElementById('form-' + taskType);
      console.log('Looking for form:', 'form-' + taskType, form);
      if (form) {
        form.classList.remove('hidden');
        form.querySelector('.jobKey').value = jobKey;
        form.querySelector('.selected-job-key').textContent = '#' + jobKey.substring(0, 16) + '...';
      } else {
        console.error('Form not found for taskType:', taskType);
        noTaskSelected.classList.remove('hidden');
      }
      
      // Highlight selected task
      document.querySelectorAll('[id^="task-"]').forEach(el => {
        el.classList.remove('ring-2', 'ring-amber-500');
      });
      const taskEl = document.getElementById('task-' + jobKey);
      if (taskEl) {
        taskEl.classList.add('ring-2', 'ring-amber-500');
      }
    }
    
    // Make selectTask globally accessible
    window.selectTask = selectTask;

    // Socket events
    socket.on('connect', () => {
      document.getElementById('status-dot').classList.add('bg-green-400');
      document.getElementById('status-text').textContent = 'Connected';
    });

    socket.on('disconnect', () => {
      document.getElementById('status-dot').classList.remove('bg-green-400');
      document.getElementById('status-dot').classList.add('bg-red-400');
      document.getElementById('status-text').textContent = 'Disconnected';
    });

    socket.on('initial-tasks', (initialTasks) => {
      initialTasks.forEach(task => {
        // Check if task already exists to avoid duplicates
        if (!tasks.has(task.jobKey)) {
          tasks.set(task.jobKey, task);
          taskList.appendChild(renderTaskCard(task));
        }
      });
      updateTaskCount();
    });

    socket.on('new-task', (task) => {
      // Check if task already exists to avoid duplicates
      if (tasks.has(task.jobKey)) {
        console.log('Task already exists, skipping:', task.jobKey);
        return;
      }
      tasks.set(task.jobKey, task);
      taskList.insertBefore(renderTaskCard(task), taskList.firstChild);
      updateTaskCount();
      var label = taskTypeLabels[task.taskType] || task.taskType;
      showNotification('New task: ' + label, 'info');
    });

    socket.on('task-completed', (data) => {
      tasks.delete(data.jobKey);
      var taskEl = document.getElementById('task-' + data.jobKey);
      if (taskEl) taskEl.remove();
      updateTaskCount();
      
      if (selectedJobKey === data.jobKey) {
        document.querySelectorAll('[id^="form-"]').forEach(function(f) { f.classList.add('hidden'); f.reset(); });
        noTaskSelected.classList.remove('hidden');
        selectedJobKey = null;
        selectedTaskType = null;
      }
    });

    // Form submissions
    document.querySelectorAll('form').forEach(form => {
      form.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        const taskType = form.id.replace('form-', '');

        try {
          const response = await fetch(`/complete-task/${taskType}`, {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data)
          });

          const result = await response.json();
          
          if (result.success) {
            showNotification('Task completed successfully!', 'success');
            form.reset();
            form.classList.add('hidden');
            noTaskSelected.classList.remove('hidden');
          } else {
            showNotification(result.error || 'Failed to complete task', 'error');
          }
        } catch (error) {
          showNotification('Error: ' + error.message, 'error');
        }
      });
    });
  </script>
</body>
</html>
