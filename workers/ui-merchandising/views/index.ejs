<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Merchandising Department | Stock Replenishment System</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/socket.io/socket.io.js"></script>
  <style>
    @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
    @keyframes slideOut { from { transform: translateX(0); opacity: 1; } to { transform: translateX(100%); opacity: 0; } }
    @keyframes pulse-border { 0%, 100% { box-shadow: 0 0 0 0 rgba(236, 72, 153, 0.4); } 50% { box-shadow: 0 0 0 8px rgba(236, 72, 153, 0); } }
    .notification-enter { animation: slideIn 0.3s ease-out forwards; }
    .notification-exit { animation: slideOut 0.3s ease-in forwards; }
    .task-new { animation: pulse-border 1s ease-in-out 3; }
  </style>
</head>
<body class="bg-gray-100 min-h-screen">
  <!-- Header -->
  <header class="bg-pink-600 text-white shadow-lg">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span class="text-3xl">üè∑Ô∏è</span>
          <div>
            <h1 class="text-2xl font-bold">Merchandising Department</h1>
            <p class="text-sm text-white/80">Stock Replenishment Workflow</p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <div id="connection-status" class="flex items-center space-x-2">
            <span id="status-dot" class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></span>
            <span id="status-text" class="text-sm">Connected</span>
          </div>
          <div class="bg-white/10 px-3 py-1 rounded-full text-sm">
            <span id="task-count">0</span> pending task(s)
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Notification Container -->
  <div id="notification-container" class="fixed top-4 right-4 z-50 space-y-2"></div>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Task List -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">üìã Pending Merchandising Tasks</h2>
        <div id="task-list" class="space-y-4">
          <div id="no-tasks" class="bg-white rounded-lg shadow p-8 text-center text-gray-500">
            <span class="text-4xl mb-4 block">‚è≥</span>
            <p>No pending tasks. Waiting for new tasks from Zeebe...</p>
          </div>
        </div>
      </div>

      <!-- Task Forms -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">üìù Task Details</h2>
        <div id="form-container" class="bg-white rounded-lg shadow-lg p-6">
          <div id="no-task-selected" class="text-center text-gray-500 py-8">
            <span class="text-4xl mb-4 block">üëÜ</span>
            <p>Select a task from the list to process it</p>
          </div>
          
          <!-- Create Replenishment Request Form -->
          <form id="request-form" class="hidden space-y-6">
            <input type="hidden" id="requestJobKey" name="jobKey">
            
            <div class="bg-pink-50 border border-pink-200 rounded-lg p-4 mb-4">
              <p class="text-sm text-pink-600 font-medium">üìã Creating Replenishment Request:</p>
              <p id="request-job-key" class="text-lg font-mono text-pink-800"></p>
            </div>

            <div class="bg-gray-50 rounded-lg p-4 space-y-2">
              <h3 class="font-semibold text-gray-700 mb-3">üì¶ Product Details</h3>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <span class="text-gray-500">Product:</span>
                  <span id="request-product" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">Current Stock:</span>
                  <span id="request-current-stock" class="ml-2 font-medium">-</span>
                </div>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Urgency Level</label>
              <select name="urgencyLevel" required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500">
                <option value="low">üü¢ Low - Within 2 weeks</option>
                <option value="normal" selected>üü° Normal - Within 1 week</option>
                <option value="high">üü† High - Within 3 days</option>
                <option value="critical">üî¥ Critical - Immediate</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Requested Quantity</label>
              <input type="number" name="requestedQuantity" id="request-qty" value="100" min="1" required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500">
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Notes</label>
              <textarea name="notes" rows="2" placeholder="Optional request notes..."
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500"></textarea>
            </div>

            <button type="submit" class="w-full bg-pink-600 hover:bg-pink-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors">
              üìã Submit Replenishment Request
            </button>
          </form>

          <!-- Verify Stock Form -->
          <form id="verify-form" class="hidden space-y-6">
            <input type="hidden" id="verifyJobKey" name="jobKey">
            
            <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-4">
              <p class="text-sm text-green-600 font-medium">‚úÖ Verifying Stock Levels:</p>
              <p id="verify-job-key" class="text-lg font-mono text-green-800"></p>
            </div>

            <div class="bg-gray-50 rounded-lg p-4 space-y-2">
              <h3 class="font-semibold text-gray-700 mb-3">üì¶ Replenishment Summary</h3>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <span class="text-gray-500">Product:</span>
                  <span id="verify-product" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">Expected Stock:</span>
                  <span id="verify-expected" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">Quantity Received:</span>
                  <span id="verify-received" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">Order ID:</span>
                  <span id="verify-order-id" class="ml-2 font-medium">-</span>
                </div>
              </div>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Verified Stock Count</label>
              <input type="number" name="verifiedStock" id="verify-stock" value="100" min="0" required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Stock Status</label>
              <select name="stockStatus" required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
                <option value="correct">‚úÖ Correct - Matches expected</option>
                <option value="understocked">‚ö†Ô∏è Understocked - Less than expected</option>
                <option value="overstocked">üì¶ Overstocked - More than expected</option>
                <option value="discrepancy">‚ùå Discrepancy - Needs investigation</option>
              </select>
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Shelf Location</label>
              <input type="text" name="shelfLocation" value="A1-01" required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500">
            </div>

            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Verification Notes</label>
              <textarea name="notes" rows="2" placeholder="Optional verification notes..."
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-green-500"></textarea>
            </div>

            <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors">
              ‚úÖ Complete Stock Verification
            </button>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script>
    const socket = io();
    const tasks = new Map();
    let selectedJobKey = null;

    const taskList = document.getElementById('task-list');
    const noTasks = document.getElementById('no-tasks');
    const noTaskSelected = document.getElementById('no-task-selected');
    const requestForm = document.getElementById('request-form');
    const verifyForm = document.getElementById('verify-form');
    const taskCount = document.getElementById('task-count');
    const notificationContainer = document.getElementById('notification-container');

    function updateTaskCount() {
      taskCount.textContent = tasks.size;
      noTasks.classList.toggle('hidden', tasks.size > 0);
    }

    function showNotification(message, type = 'info') {
      const colors = { success: 'bg-green-500', error: 'bg-red-500', warning: 'bg-yellow-500', info: 'bg-pink-500' };
      const icons = { success: '‚úÖ', error: '‚ùå', warning: '‚ö†Ô∏è', info: 'üì•' };
      
      const notification = document.createElement('div');
      notification.className = 'notification-enter ' + colors[type] + ' text-white px-4 py-3 rounded-lg shadow-lg flex items-center space-x-2 min-w-[300px]';
      notification.innerHTML = 
        '<span class="text-xl">' + icons[type] + '</span>' +
        '<span class="flex-1">' + message + '</span>' +
        '<button onclick="this.parentElement.remove()" class="text-white/80 hover:text-white">‚úï</button>';
      
      notificationContainer.appendChild(notification);
      setTimeout(() => {
        notification.classList.replace('notification-enter', 'notification-exit');
        setTimeout(() => notification.remove(), 300);
      }, 5000);
    }

    function getTaskColor(taskType) {
      switch(taskType) {
        case 'create-replenishment-request': return 'pink';
        case 'verify-stock': return 'green';
        default: return 'gray';
      }
    }

    function getTaskIcon(taskType) {
      switch(taskType) {
        case 'create-replenishment-request': return 'üìã';
        case 'verify-stock': return '‚úÖ';
        default: return 'üì¶';
      }
    }

    function getTaskTitle(taskType) {
      switch(taskType) {
        case 'create-replenishment-request': return 'Create Replenishment Request';
        case 'verify-stock': return 'Verify Stock Levels';
        default: return 'Unknown Task';
      }
    }

    function renderTaskCard(task) {
      const card = document.createElement('div');
      card.id = 'task-' + task.jobKey;
      
      const color = getTaskColor(task.taskType);
      const icon = getTaskIcon(task.taskType);
      const title = getTaskTitle(task.taskType);
      
      card.className = 'bg-white rounded-lg shadow-md border-l-4 border-' + color + '-500 p-4 task-new cursor-pointer hover:shadow-lg transition-shadow';
      
      const vars = task.variables || {};
      const productName = vars.productName || vars.productId || 'Unknown';
      
      let detailsHtml = '';
      if (task.taskType === 'create-replenishment-request') {
        detailsHtml = 'Product: ' + productName + ' | Stock: ' + (vars.currentStock || '-') + ' units';
      } else if (task.taskType === 'verify-stock') {
        detailsHtml = 'Product: ' + productName + ' | Received: ' + (vars.quantityReceived || '-') + ' units';
      }
      
      card.innerHTML = 
        '<div class="flex items-start justify-between">' +
          '<div>' +
            '<div class="flex items-center space-x-2 mb-2">' +
              '<span class="bg-' + color + '-100 text-' + color + '-800 text-xs font-medium px-2.5 py-0.5 rounded">' + icon + ' ' + task.taskType + '</span>' +
            '</div>' +
            '<h3 class="font-semibold text-gray-800">' + title + '</h3>' +
            '<p class="text-sm text-gray-500 mt-1">' + detailsHtml + '</p>' +
          '</div>' +
          '<span class="text-xs text-gray-400">' + new Date().toLocaleTimeString() + '</span>' +
        '</div>' +
        '<div class="mt-4">' +
          '<button data-job-key="' + task.jobKey + '" class="select-task-btn w-full bg-' + color + '-500 hover:bg-' + color + '-600 text-white text-sm font-medium px-4 py-2 rounded transition-colors">' +
            'Work on this task' +
          '</button>' +
        '</div>';
      return card;
    }

    // Event delegation for task buttons
    taskList.addEventListener('click', function(e) {
      const btn = e.target.closest('.select-task-btn');
      if (btn) {
        selectTask(btn.dataset.jobKey);
      }
    });

    function hideAllForms() {
      requestForm.classList.add('hidden');
      verifyForm.classList.add('hidden');
      noTaskSelected.classList.add('hidden');
    }

    function selectTask(jobKey) {
      selectedJobKey = jobKey;
      const task = tasks.get(jobKey);
      const vars = task && task.variables ? task.variables : {};
      
      hideAllForms();
      
      if (task.taskType === 'create-replenishment-request') {
        document.getElementById('requestJobKey').value = jobKey;
        document.getElementById('request-job-key').textContent = '#' + jobKey.substring(0, 16) + '...';
        document.getElementById('request-product').textContent = vars.productName || vars.productId || 'N/A';
        document.getElementById('request-current-stock').textContent = (vars.currentStock || '-') + ' units';
        requestForm.classList.remove('hidden');
      } else if (task.taskType === 'verify-stock') {
        document.getElementById('verifyJobKey').value = jobKey;
        document.getElementById('verify-job-key').textContent = '#' + jobKey.substring(0, 16) + '...';
        document.getElementById('verify-product').textContent = vars.productName || vars.productId || 'N/A';
        const expectedStock = (vars.currentStock || 0) + (vars.quantityReceived || 0);
        document.getElementById('verify-expected').textContent = expectedStock + ' units';
        document.getElementById('verify-received').textContent = (vars.quantityReceived || '-') + ' units';
        document.getElementById('verify-order-id').textContent = vars.orderId || 'N/A';
        document.getElementById('verify-stock').value = expectedStock;
        verifyForm.classList.remove('hidden');
      }
      
      // Highlight selected task
      document.querySelectorAll('[id^="task-"]').forEach(el => {
        el.classList.remove('ring-2', 'ring-pink-500', 'ring-green-500');
      });
      const color = getTaskColor(task.taskType);
      var taskEl = document.getElementById('task-' + jobKey);
      if (taskEl) taskEl.classList.add('ring-2', 'ring-' + color + '-500');
    }

    // Socket events
    socket.on('connect', () => {
      document.getElementById('status-dot').classList.add('bg-green-400');
      document.getElementById('status-text').textContent = 'Connected';
    });

    socket.on('disconnect', () => {
      document.getElementById('status-dot').classList.remove('bg-green-400');
      document.getElementById('status-dot').classList.add('bg-red-400');
      document.getElementById('status-text').textContent = 'Disconnected';
    });

    socket.on('initial-tasks', (initialTasks) => {
      initialTasks.forEach(task => {
        if (!tasks.has(task.jobKey)) {
          tasks.set(task.jobKey, task);
          taskList.appendChild(renderTaskCard(task));
        }
      });
      updateTaskCount();
    });

    socket.on('new-task', (task) => {
      if (tasks.has(task.jobKey)) {
        console.log('Task already exists, skipping:', task.jobKey);
        return;
      }
      tasks.set(task.jobKey, task);
      taskList.insertBefore(renderTaskCard(task), taskList.firstChild);
      updateTaskCount();
      showNotification('New merchandising task received: ' + task.taskType, 'info');
    });

    socket.on('task-completed', (data) => {
      tasks.delete(data.jobKey);
      var taskEl = document.getElementById('task-' + data.jobKey);
      if (taskEl) taskEl.remove();
      updateTaskCount();
      
      if (selectedJobKey === data.jobKey) {
        hideAllForms();
        noTaskSelected.classList.remove('hidden');
        selectedJobKey = null;
        requestForm.reset();
        verifyForm.reset();
      }
    });

    // Form submissions
    requestForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(requestForm).entries());

      try {
        const response = await fetch('/complete-request', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        const result = await response.json();
        if (result.success) {
          showNotification('Replenishment request submitted! üìã', 'success');
          requestForm.reset();
          hideAllForms();
          noTaskSelected.classList.remove('hidden');
        } else {
          showNotification(result.error || 'Failed to submit request', 'error');
        }
      } catch (error) {
        showNotification('Error: ' + error.message, 'error');
      }
    });

    verifyForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const data = Object.fromEntries(new FormData(verifyForm).entries());

      try {
        const response = await fetch('/complete-verify', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });
        const result = await response.json();
        if (result.success) {
          showNotification('Stock verified! Workflow complete! üéâ', 'success');
          verifyForm.reset();
          hideAllForms();
          noTaskSelected.classList.remove('hidden');
        } else {
          showNotification(result.error || 'Failed to verify stock', 'error');
        }
      } catch (error) {
        showNotification('Error: ' + error.message, 'error');
      }
    });
  </script>
</body>
</html>
