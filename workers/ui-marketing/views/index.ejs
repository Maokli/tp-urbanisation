<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Marketing Department | Product Promotion System</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/socket.io/socket.io.js"></script>
  <style>
    @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
    @keyframes slideOut { from { transform: translateX(0); opacity: 1; } to { transform: translateX(100%); opacity: 0; } }
    @keyframes pulse-border { 0%, 100% { box-shadow: 0 0 0 0 rgba(236, 72, 153, 0.4); } 50% { box-shadow: 0 0 0 8px rgba(236, 72, 153, 0); } }
    .notification-enter { animation: slideIn 0.3s ease-out forwards; }
    .notification-exit { animation: slideOut 0.3s ease-in forwards; }
    .task-new { animation: pulse-border 1s ease-in-out 3; }
  </style>
</head>
<body class="bg-gray-100 min-h-screen">
  <!-- Header -->
  <header class="bg-pink-600 text-white shadow-lg">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span class="text-3xl">üì¢</span>
          <div>
            <h1 class="text-2xl font-bold">Marketing Department</h1>
            <p class="text-sm text-white/80">Product Promotion Workflow</p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <div id="connection-status" class="flex items-center space-x-2">
            <span id="status-dot" class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></span>
            <span id="status-text" class="text-sm">Connected</span>
          </div>
          <div class="bg-white/10 px-3 py-1 rounded-full text-sm">
            <span id="task-count">0</span> pending task(s)
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Notification Container -->
  <div id="notification-container" class="fixed top-4 right-4 z-50 space-y-2"></div>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Task List -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">üìã Pending Campaigns</h2>
        <div id="task-list" class="space-y-4">
          <div id="no-tasks" class="bg-white rounded-lg shadow p-8 text-center text-gray-500">
            <span class="text-4xl mb-4 block">‚è≥</span>
            <p>No pending campaigns. Waiting for new tasks from Zeebe...</p>
          </div>
        </div>
      </div>

      <!-- Task Form -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">üé® Campaign Configuration</h2>
        <div id="form-container" class="bg-white rounded-lg shadow-lg p-6">
          <div id="no-task-selected" class="text-center text-gray-500 py-8">
            <span class="text-4xl mb-4 block">üëÜ</span>
            <p>Select a task from the list to configure campaign</p>
          </div>
          
          <form id="task-form" class="hidden space-y-6">
            <input type="hidden" id="jobKey" name="jobKey">
            
            <div class="bg-pink-50 border border-pink-200 rounded-lg p-4 mb-4">
              <p class="text-sm text-pink-600 font-medium">Creating Campaign For:</p>
              <p id="selected-job-key" class="text-lg font-mono text-pink-800"></p>
            </div>

            <!-- Approved Promotion Details -->
            <div id="promotion-details" class="bg-gray-50 rounded-lg p-4 space-y-2">
              <h3 class="font-semibold text-gray-700 mb-3">‚úÖ Approved Promotion</h3>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <span class="text-gray-500">Promo Text:</span>
                  <span id="detail-promo-text" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">Discount:</span>
                  <span id="detail-discount" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">Products:</span>
                  <span id="detail-products" class="ml-2 font-medium">-</span>
                </div>
              </div>
            </div>

            <!-- Campaign Headline -->
            <div>
              <label for="headline" class="block text-sm font-medium text-gray-700 mb-2">
                Campaign Headline
              </label>
              <input
                type="text"
                id="headline"
                name="headline"
                placeholder="Leave empty to use promotion text"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500"
              >
            </div>

            <!-- Flyer Quantity -->
            <div>
              <label for="flyerQty" class="block text-sm font-medium text-gray-700 mb-2">
                Number of Flyers to Print <span class="text-red-500">*</span>
              </label>
              <input
                type="number"
                id="flyerQty"
                name="flyerQty"
                value="1000"
                min="0"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500"
              >
            </div>

            <!-- Digital Channels -->
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Digital Channels <span class="text-red-500">*</span>
              </label>
              <div class="grid grid-cols-2 gap-3">
                <label class="flex items-center space-x-2 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-pink-50 transition-colors">
                  <input type="checkbox" name="digitalChannels" value="email" checked class="w-4 h-4 text-pink-600 rounded">
                  <span class="text-2xl">üìß</span>
                  <span class="text-sm">Email</span>
                </label>
                <label class="flex items-center space-x-2 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-pink-50 transition-colors">
                  <input type="checkbox" name="digitalChannels" value="social_media" checked class="w-4 h-4 text-pink-600 rounded">
                  <span class="text-2xl">üì±</span>
                  <span class="text-sm">Social Media</span>
                </label>
                <label class="flex items-center space-x-2 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-pink-50 transition-colors">
                  <input type="checkbox" name="digitalChannels" value="website" checked class="w-4 h-4 text-pink-600 rounded">
                  <span class="text-2xl">üåê</span>
                  <span class="text-sm">Website</span>
                </label>
                <label class="flex items-center space-x-2 p-3 bg-gray-50 rounded-lg cursor-pointer hover:bg-pink-50 transition-colors">
                  <input type="checkbox" name="digitalChannels" value="mobile_app" class="w-4 h-4 text-pink-600 rounded">
                  <span class="text-2xl">üì≤</span>
                  <span class="text-sm">Mobile App</span>
                </label>
              </div>
            </div>

            <!-- Poster Quantity -->
            <div>
              <label for="posterQty" class="block text-sm font-medium text-gray-700 mb-2">
                Number of In-Store Posters <span class="text-red-500">*</span>
              </label>
              <input
                type="number"
                id="posterQty"
                name="posterQty"
                value="50"
                min="0"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-pink-500 focus:border-pink-500"
              >
            </div>

            <!-- Submit Button -->
            <div class="pt-4">
              <button
                type="submit"
                class="w-full bg-pink-600 hover:bg-pink-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors flex items-center justify-center space-x-2"
              >
                <span>üöÄ Launch Campaign</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script>
    const socket = io();
    const tasks = new Map();
    let selectedJobKey = null;

    const taskList = document.getElementById('task-list');
    const noTasks = document.getElementById('no-tasks');
    const taskForm = document.getElementById('task-form');
    const noTaskSelected = document.getElementById('no-task-selected');
    const taskCount = document.getElementById('task-count');
    const notificationContainer = document.getElementById('notification-container');

    function updateTaskCount() {
      taskCount.textContent = tasks.size;
      noTasks.classList.toggle('hidden', tasks.size > 0);
    }

    function showNotification(message, type = 'info') {
      const colors = { success: 'bg-green-500', error: 'bg-red-500', warning: 'bg-yellow-500', info: 'bg-pink-500' };
      const icons = { success: '‚úÖ', error: '‚ùå', warning: '‚ö†Ô∏è', info: 'üì•' };
      
      const notification = document.createElement('div');
      notification.className = `notification-enter ${colors[type]} text-white px-4 py-3 rounded-lg shadow-lg flex items-center space-x-2 min-w-[300px]`;
      notification.innerHTML = `
        <span class="text-xl">${icons[type]}</span>
        <span class="flex-1">${message}</span>
        <button onclick="this.parentElement.remove()" class="text-white/80 hover:text-white">‚úï</button>
      `;
      
      notificationContainer.appendChild(notification);
      setTimeout(() => {
        notification.classList.replace('notification-enter', 'notification-exit');
        setTimeout(() => notification.remove(), 300);
      }, 5000);
    }

    function renderTaskCard(task) {
      const card = document.createElement('div');
      card.id = 'task-' + task.jobKey;
      card.className = 'bg-white rounded-lg shadow-md border-l-4 border-pink-500 p-4 task-new cursor-pointer hover:shadow-lg transition-shadow';
      
      const vars = task.variables || {};
      const promoText = vars.promotionText ? '"' + vars.promotionText + '"' : 'New promotion campaign';
      
      card.innerHTML = 
        '<div class="flex items-start justify-between">' +
          '<div>' +
            '<div class="flex items-center space-x-2 mb-2">' +
              '<span class="bg-pink-100 text-pink-800 text-xs font-medium px-2.5 py-0.5 rounded">prepare-promotion-material</span>' +
            '</div>' +
            '<h3 class="font-semibold text-gray-800">Prepare & Publish Campaign</h3>' +
            '<p class="text-sm text-gray-500 mt-1">' + promoText + '</p>' +
          '</div>' +
          '<span class="text-xs text-gray-400">' + new Date().toLocaleTimeString() + '</span>' +
        '</div>' +
        '<div class="mt-4">' +
          '<button data-job-key="' + task.jobKey + '" class="select-task-btn w-full bg-pink-500 hover:bg-pink-600 text-white text-sm font-medium px-4 py-2 rounded transition-colors">' +
            'Configure campaign' +
          '</button>' +
        '</div>';
      return card;
    }

    // Event delegation for task buttons
    taskList.addEventListener('click', function(e) {
      const btn = e.target.closest('.select-task-btn');
      if (btn) {
        selectTask(btn.dataset.jobKey);
      }
    });

    function selectTask(jobKey) {
      selectedJobKey = jobKey;
      const task = tasks.get(jobKey);
      
      document.getElementById('jobKey').value = jobKey;
      document.getElementById('selected-job-key').textContent = '#' + jobKey.substring(0, 16) + '...';
      
      // Populate promotion details
      const vars = task && task.variables ? task.variables : {};
      document.getElementById('detail-promo-text').textContent = vars.promotionText || 'N/A';
      document.getElementById('detail-discount').textContent = vars.discountPercentage ? vars.discountPercentage + '%' : 'N/A';
      document.getElementById('detail-products').textContent = vars.targetProducts ? JSON.stringify(vars.targetProducts) : 'N/A';
      
      taskForm.classList.remove('hidden');
      noTaskSelected.classList.add('hidden');
      
      document.querySelectorAll('[id^="task-"]').forEach(el => {
        el.classList.remove('ring-2', 'ring-pink-500');
      });
      var taskEl = document.getElementById('task-' + jobKey);
      if (taskEl) taskEl.classList.add('ring-2', 'ring-pink-500');
    }

    // Socket events
    socket.on('connect', () => {
      document.getElementById('status-dot').classList.add('bg-green-400');
      document.getElementById('status-text').textContent = 'Connected';
    });

    socket.on('disconnect', () => {
      document.getElementById('status-dot').classList.remove('bg-green-400');
      document.getElementById('status-dot').classList.add('bg-red-400');
      document.getElementById('status-text').textContent = 'Disconnected';
    });

    socket.on('initial-tasks', (initialTasks) => {
      initialTasks.forEach(task => {
        // Check if task already exists to avoid duplicates
        if (!tasks.has(task.jobKey)) {
          tasks.set(task.jobKey, task);
          taskList.appendChild(renderTaskCard(task));
        }
      });
      updateTaskCount();
    });

    socket.on('new-task', (task) => {
      // Check if task already exists to avoid duplicates
      if (tasks.has(task.jobKey)) {
        console.log('Task already exists, skipping:', task.jobKey);
        return;
      }
      tasks.set(task.jobKey, task);
      taskList.insertBefore(renderTaskCard(task), taskList.firstChild);
      updateTaskCount();
      showNotification('New campaign request received!', 'info');
    });

    socket.on('task-completed', (data) => {
      tasks.delete(data.jobKey);
      var taskEl = document.getElementById('task-' + data.jobKey);
      if (taskEl) taskEl.remove();
      updateTaskCount();
      
      if (selectedJobKey === data.jobKey) {
        taskForm.classList.add('hidden');
        noTaskSelected.classList.remove('hidden');
        selectedJobKey = null;
        taskForm.reset();
      }
    });

    // Form submission
    taskForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(taskForm);
      const data = {
        jobKey: formData.get('jobKey'),
        flyerQty: formData.get('flyerQty'),
        digitalChannels: formData.getAll('digitalChannels'),
        posterQty: formData.get('posterQty'),
        headline: formData.get('headline')
      };

      try {
        const response = await fetch('/complete-task', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();
        
        if (result.success) {
          showNotification('Campaign launched successfully! üöÄ', 'success');
          taskForm.reset();
          taskForm.classList.add('hidden');
          noTaskSelected.classList.remove('hidden');
        } else {
          showNotification(result.error || 'Failed to complete task', 'error');
        }
      } catch (error) {
        showNotification('Error: ' + error.message, 'error');
      }
    });
  </script>
</body>
</html>
