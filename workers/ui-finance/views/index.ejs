<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Finance & Accounting Department | Workflow System</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/socket.io/socket.io.js"></script>
  <style>
    @keyframes slideIn { from { transform: translateX(100%); opacity: 0; } to { transform: translateX(0); opacity: 1; } }
    @keyframes slideOut { from { transform: translateX(0); opacity: 1; } to { transform: translateX(100%); opacity: 0; } }
    @keyframes pulse-border { 0%, 100% { box-shadow: 0 0 0 0 rgba(16, 185, 129, 0.4); } 50% { box-shadow: 0 0 0 8px rgba(16, 185, 129, 0); } }
    .notification-enter { animation: slideIn 0.3s ease-out forwards; }
    .notification-exit { animation: slideOut 0.3s ease-in forwards; }
    .task-new { animation: pulse-border 1s ease-in-out 3; }
  </style>
</head>
<body class="bg-gray-100 min-h-screen">
  <!-- Header -->
  <header class="bg-emerald-600 text-white shadow-lg">
    <div class="container mx-auto px-4 py-4">
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-4">
          <span class="text-3xl">üí∞</span>
          <div>
            <h1 class="text-2xl font-bold">Finance & Accounting Department</h1>
            <p class="text-sm text-white/80">Approvals for Promotions & Stock Replenishment</p>
          </div>
        </div>
        <div class="flex items-center space-x-4">
          <div id="connection-status" class="flex items-center space-x-2">
            <span id="status-dot" class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></span>
            <span id="status-text" class="text-sm">Connected</span>
          </div>
          <div class="bg-white/10 px-3 py-1 rounded-full text-sm">
            <span id="task-count">0</span> pending task(s)
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Notification Container -->
  <div id="notification-container" class="fixed top-4 right-4 z-50 space-y-2"></div>

  <!-- Main Content -->
  <main class="container mx-auto px-4 py-6">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Task List -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">üìã Pending Approvals</h2>
        <div id="task-list" class="space-y-4">
          <div id="no-tasks" class="bg-white rounded-lg shadow p-8 text-center text-gray-500">
            <span class="text-4xl mb-4 block">‚è≥</span>
            <p>No pending approvals. Waiting for new tasks from Zeebe...</p>
          </div>
        </div>
      </div>

      <!-- Task Form -->
      <div>
        <h2 class="text-xl font-semibold text-gray-800 mb-4">üìù Financial Evaluation</h2>
        <div id="form-container" class="bg-white rounded-lg shadow-lg p-6">
          <div id="no-task-selected" class="text-center text-gray-500 py-8">
            <span class="text-4xl mb-4 block">üëÜ</span>
            <p>Select a task from the list to begin evaluation</p>
          </div>
          
          <!-- Promotion Evaluation Form -->
          <form id="task-form" class="hidden space-y-6">
            <input type="hidden" id="jobKey" name="jobKey">
            
            <div class="bg-emerald-50 border border-emerald-200 rounded-lg p-4 mb-4">
              <p class="text-sm text-emerald-600 font-medium">üìä Evaluating Promotion:</p>
              <p id="selected-job-key" class="text-lg font-mono text-emerald-800"></p>
            </div>

            <!-- Promotion Details (read-only) -->
            <div id="promotion-details" class="bg-gray-50 rounded-lg p-4 space-y-2">
              <h3 class="font-semibold text-gray-700 mb-3">üìã Promotion Details</h3>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <span class="text-gray-500">Products:</span>
                  <span id="detail-products" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">Discount:</span>
                  <span id="detail-discount" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">Promo Text:</span>
                  <span id="detail-promo-text" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">Duration:</span>
                  <span id="detail-duration" class="ml-2 font-medium">-</span>
                </div>
              </div>
            </div>

            <!-- Expected Margin -->
            <div>
              <label for="margin" class="block text-sm font-medium text-gray-700 mb-2">
                Expected Margin After Promotion (%) <span class="text-red-500">*</span>
              </label>
              <input
                type="number"
                id="margin"
                name="margin"
                step="0.1"
                min="-50"
                max="100"
                value="18.5"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              >
            </div>

            <!-- Revenue Impact -->
            <div>
              <label for="revenueImpact" class="block text-sm font-medium text-gray-700 mb-2">
                Expected Revenue Impact <span class="text-red-500">*</span>
              </label>
              <input
                type="text"
                id="revenueImpact"
                name="revenueImpact"
                placeholder="e.g., +15% or -5%"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              >
            </div>

            <!-- Risk Level -->
            <div>
              <label for="riskLevel" class="block text-sm font-medium text-gray-700 mb-2">
                Risk Level <span class="text-red-500">*</span>
              </label>
              <select
                id="riskLevel"
                name="riskLevel"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500"
              >
                <option value="low">üü¢ Low Risk</option>
                <option value="medium" selected>üü° Medium Risk</option>
                <option value="high">üî¥ High Risk</option>
              </select>
            </div>

            <!-- APPROVAL DECISION -->
            <div class="border-2 border-emerald-500 rounded-lg p-4 bg-emerald-50">
              <h3 class="text-lg font-bold text-emerald-800 mb-3 flex items-center">
                <span class="text-2xl mr-2">‚ö†Ô∏è</span> APPROVAL DECISION
              </h3>
              <p class="text-sm text-gray-600 mb-4">
                This decision determines whether the promotion will proceed to Marketing and Implementation.
              </p>
              <div class="flex space-x-4">
                <label class="flex-1 cursor-pointer">
                  <input type="radio" name="approved" value="true" class="sr-only peer">
                  <div class="peer-checked:bg-green-500 peer-checked:text-white peer-checked:border-green-600 bg-white border-2 border-gray-300 rounded-lg p-4 text-center transition-all hover:border-green-400">
                    <span class="text-3xl block mb-2">‚úÖ</span>
                    <span class="font-bold">APPROVE</span>
                    <p class="text-xs mt-1 opacity-75">Proceed with promotion</p>
                  </div>
                </label>
                <label class="flex-1 cursor-pointer">
                  <input type="radio" name="approved" value="false" class="sr-only peer" checked>
                  <div class="peer-checked:bg-red-500 peer-checked:text-white peer-checked:border-red-600 bg-white border-2 border-gray-300 rounded-lg p-4 text-center transition-all hover:border-red-400">
                    <span class="text-3xl block mb-2">‚ùå</span>
                    <span class="font-bold">REJECT</span>
                    <p class="text-xs mt-1 opacity-75">Cancel promotion</p>
                  </div>
                </label>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="pt-4">
              <button
                type="submit"
                class="w-full bg-emerald-600 hover:bg-emerald-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors flex items-center justify-center space-x-2"
              >
                <span>üì§ Submit Evaluation</span>
              </button>
            </div>
          </form>
          
          <!-- Stock Replenishment Evaluation Form -->
          <form id="stock-task-form" class="hidden space-y-6">
            <input type="hidden" id="stockJobKey" name="jobKey">
            
            <div class="bg-orange-50 border border-orange-200 rounded-lg p-4 mb-4">
              <p class="text-sm text-orange-600 font-medium">üì¶ Evaluating Stock Replenishment:</p>
              <p id="stock-selected-job-key" class="text-lg font-mono text-orange-800"></p>
            </div>

            <!-- Stock Order Details (read-only) -->
            <div class="bg-gray-50 rounded-lg p-4 space-y-2">
              <h3 class="font-semibold text-gray-700 mb-3">üì¶ Replenishment Details</h3>
              <div class="grid grid-cols-2 gap-4 text-sm">
                <div>
                  <span class="text-gray-500">Product:</span>
                  <span id="stock-detail-product" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">Recommended Qty:</span>
                  <span id="stock-detail-quantity" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">Reorder Point:</span>
                  <span id="stock-detail-reorder" class="ml-2 font-medium">-</span>
                </div>
                <div>
                  <span class="text-gray-500">Current Stock:</span>
                  <span id="stock-detail-current" class="ml-2 font-medium">-</span>
                </div>
              </div>
            </div>

            <!-- Budget Amount -->
            <div>
              <label for="budgetAmount" class="block text-sm font-medium text-gray-700 mb-2">
                Budget Allocation ($) <span class="text-red-500">*</span>
              </label>
              <input
                type="number"
                id="budgetAmount"
                name="budgetAmount"
                step="0.01"
                min="0"
                value="2500"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
              >
            </div>

            <!-- Priority Level -->
            <div>
              <label for="stockPriorityLevel" class="block text-sm font-medium text-gray-700 mb-2">
                Priority Level <span class="text-red-500">*</span>
              </label>
              <select
                id="stockPriorityLevel"
                name="priorityLevel"
                required
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
              >
                <option value="low">üü¢ Low Priority</option>
                <option value="medium" selected>üü° Medium Priority</option>
                <option value="high">üî¥ High Priority</option>
                <option value="urgent">‚ö° Urgent</option>
              </select>
            </div>

            <!-- Notes -->
            <div>
              <label for="notes" class="block text-sm font-medium text-gray-700 mb-2">
                Finance Notes
              </label>
              <textarea
                id="notes"
                name="notes"
                rows="2"
                placeholder="Optional notes about this budget decision..."
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-orange-500 focus:border-orange-500"
              ></textarea>
            </div>

            <!-- BUDGET APPROVAL DECISION -->
            <div class="border-2 border-orange-500 rounded-lg p-4 bg-orange-50">
              <h3 class="text-lg font-bold text-orange-800 mb-3 flex items-center">
                <span class="text-2xl mr-2">üíµ</span> BUDGET APPROVAL DECISION
              </h3>
              <p class="text-sm text-gray-600 mb-4">
                This decision determines whether the stock replenishment order will be processed.
              </p>
              <div class="flex space-x-4">
                <label class="flex-1 cursor-pointer">
                  <input type="radio" name="budgetApproved" value="true" class="sr-only peer">
                  <div class="peer-checked:bg-green-500 peer-checked:text-white peer-checked:border-green-600 bg-white border-2 border-gray-300 rounded-lg p-4 text-center transition-all hover:border-green-400">
                    <span class="text-3xl block mb-2">‚úÖ</span>
                    <span class="font-bold">APPROVE BUDGET</span>
                    <p class="text-xs mt-1 opacity-75">Allocate funds</p>
                  </div>
                </label>
                <label class="flex-1 cursor-pointer">
                  <input type="radio" name="budgetApproved" value="false" class="sr-only peer" checked>
                  <div class="peer-checked:bg-red-500 peer-checked:text-white peer-checked:border-red-600 bg-white border-2 border-gray-300 rounded-lg p-4 text-center transition-all hover:border-red-400">
                    <span class="text-3xl block mb-2">‚ùå</span>
                    <span class="font-bold">DENY BUDGET</span>
                    <p class="text-xs mt-1 opacity-75">Reject request</p>
                  </div>
                </label>
              </div>
            </div>

            <!-- Submit Button -->
            <div class="pt-4">
              <button
                type="submit"
                class="w-full bg-orange-600 hover:bg-orange-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors flex items-center justify-center space-x-2"
              >
                <span>üì§ Submit Budget Decision</span>
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </main>

  <script>
    const socket = io();
    const tasks = new Map();
    let selectedJobKey = null;

    const taskList = document.getElementById('task-list');
    const noTasks = document.getElementById('no-tasks');
    const taskForm = document.getElementById('task-form');
    const stockTaskForm = document.getElementById('stock-task-form');
    const noTaskSelected = document.getElementById('no-task-selected');
    const taskCount = document.getElementById('task-count');
    const notificationContainer = document.getElementById('notification-container');

    function updateTaskCount() {
      taskCount.textContent = tasks.size;
      noTasks.classList.toggle('hidden', tasks.size > 0);
    }

    function showNotification(message, type = 'info') {
      const colors = { success: 'bg-green-500', error: 'bg-red-500', warning: 'bg-yellow-500', info: 'bg-emerald-500' };
      const icons = { success: '‚úÖ', error: '‚ùå', warning: '‚ö†Ô∏è', info: 'üì•' };
      
      const notification = document.createElement('div');
      notification.className = `notification-enter ${colors[type]} text-white px-4 py-3 rounded-lg shadow-lg flex items-center space-x-2 min-w-[300px]`;
      notification.innerHTML = `
        <span class="text-xl">${icons[type]}</span>
        <span class="flex-1">${message}</span>
        <button onclick="this.parentElement.remove()" class="text-white/80 hover:text-white">‚úï</button>
      `;
      
      notificationContainer.appendChild(notification);
      setTimeout(() => {
        notification.classList.replace('notification-enter', 'notification-exit');
        setTimeout(() => notification.remove(), 300);
      }, 5000);
    }

    function renderTaskCard(task) {
      const card = document.createElement('div');
      card.id = 'task-' + task.jobKey;
      
      const isStock = task.taskType === 'analyze-replenishment';
      const borderColor = isStock ? 'border-orange-500' : 'border-emerald-500';
      
      card.className = 'bg-white rounded-lg shadow-md border-l-4 ' + borderColor + ' p-4 task-new cursor-pointer hover:shadow-lg transition-shadow';
      
      const vars = task.variables || {};
      
      let badgeHtml, titleHtml, detailsHtml;
      
      if (isStock) {
        badgeHtml = 
          '<span class="bg-orange-100 text-orange-800 text-xs font-medium px-2.5 py-0.5 rounded">üì¶ analyze-replenishment</span>' +
          '<span class="bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded">üíµ Budget Review</span>';
        titleHtml = 'Stock Replenishment Budget Review';
        const productName = vars.productName || 'Unknown Product';
        const qty = vars.recommendedQuantity || '-';
        detailsHtml = 'Product: ' + productName + ' | Qty: ' + qty + ' units';
      } else {
        const discountText = vars.discountPercentage ? 'Discount: ' + vars.discountPercentage + '%' : '';
        const productsText = vars.targetProducts ? ' | Products: ' + vars.targetProducts.length : '';
        badgeHtml = 
          '<span class="bg-emerald-100 text-emerald-800 text-xs font-medium px-2.5 py-0.5 rounded">üìä evaluate-profitability</span>' +
          '<span class="bg-orange-100 text-orange-800 text-xs font-medium px-2.5 py-0.5 rounded">‚ö†Ô∏è Requires Approval</span>';
        titleHtml = 'Financial Feasibility Evaluation';
        detailsHtml = discountText + productsText;
      }
      
      const btnColor = isStock ? 'bg-orange-500 hover:bg-orange-600' : 'bg-emerald-500 hover:bg-emerald-600';
      const btnText = isStock ? 'Review Budget Request' : 'Evaluate this promotion';
      
      card.innerHTML = 
        '<div class="flex items-start justify-between">' +
          '<div>' +
            '<div class="flex items-center space-x-2 mb-2">' + badgeHtml + '</div>' +
            '<h3 class="font-semibold text-gray-800">' + titleHtml + '</h3>' +
            '<p class="text-sm text-gray-500 mt-1">' + detailsHtml + '</p>' +
          '</div>' +
          '<span class="text-xs text-gray-400">' + new Date().toLocaleTimeString() + '</span>' +
        '</div>' +
        '<div class="mt-4">' +
          '<button data-job-key="' + task.jobKey + '" class="select-task-btn w-full ' + btnColor + ' text-white text-sm font-medium px-4 py-2 rounded transition-colors">' +
            btnText +
          '</button>' +
        '</div>';
      return card;
    }

    // Event delegation for task buttons
    taskList.addEventListener('click', function(e) {
      const btn = e.target.closest('.select-task-btn');
      if (btn) {
        selectTask(btn.dataset.jobKey);
      }
    });

    function selectTask(jobKey) {
      selectedJobKey = jobKey;
      const task = tasks.get(jobKey);
      const vars = task && task.variables ? task.variables : {};
      const isStock = task && task.taskType === 'analyze-replenishment';
      
      // Hide both forms first
      taskForm.classList.add('hidden');
      stockTaskForm.classList.add('hidden');
      noTaskSelected.classList.add('hidden');
      
      if (isStock) {
        // Stock replenishment form
        document.getElementById('stockJobKey').value = jobKey;
        document.getElementById('stock-selected-job-key').textContent = '#' + jobKey.substring(0, 16) + '...';
        
        document.getElementById('stock-detail-product').textContent = vars.productName || vars.productId || 'N/A';
        document.getElementById('stock-detail-quantity').textContent = vars.recommendedQuantity ? vars.recommendedQuantity + ' units' : 'N/A';
        document.getElementById('stock-detail-reorder').textContent = vars.reorderPoint || 'N/A';
        document.getElementById('stock-detail-current').textContent = vars.currentStock ? vars.currentStock + ' units' : 'N/A';
        
        stockTaskForm.classList.remove('hidden');
      } else {
        // Promotion form
        document.getElementById('jobKey').value = jobKey;
        document.getElementById('selected-job-key').textContent = '#' + jobKey.substring(0, 16) + '...';
        
        document.getElementById('detail-products').textContent = vars.targetProducts ? JSON.stringify(vars.targetProducts) : 'N/A';
        document.getElementById('detail-discount').textContent = vars.discountPercentage ? vars.discountPercentage + '%' : 'N/A';
        document.getElementById('detail-promo-text').textContent = vars.promotionText || 'N/A';
        document.getElementById('detail-duration').textContent = vars.durationDays ? vars.durationDays + ' days' : 'N/A';
        
        taskForm.classList.remove('hidden');
      }
      
      document.querySelectorAll('[id^="task-"]').forEach(el => {
        el.classList.remove('ring-2', 'ring-emerald-500', 'ring-orange-500');
      });
      var taskEl = document.getElementById('task-' + jobKey);
      if (taskEl) {
        taskEl.classList.add('ring-2', isStock ? 'ring-orange-500' : 'ring-emerald-500');
      }
    }

    // Socket events
    socket.on('connect', () => {
      document.getElementById('status-dot').classList.add('bg-green-400');
      document.getElementById('status-text').textContent = 'Connected';
    });

    socket.on('disconnect', () => {
      document.getElementById('status-dot').classList.remove('bg-green-400');
      document.getElementById('status-dot').classList.add('bg-red-400');
      document.getElementById('status-text').textContent = 'Disconnected';
    });

    socket.on('initial-tasks', (initialTasks) => {
      initialTasks.forEach(task => {
        if (!tasks.has(task.jobKey)) {
          tasks.set(task.jobKey, task);
          taskList.appendChild(renderTaskCard(task));
        }
      });
      updateTaskCount();
    });

    socket.on('new-task', (task) => {
      if (tasks.has(task.jobKey)) {
        console.log('Task already exists, skipping:', task.jobKey);
        return;
      }
      tasks.set(task.jobKey, task);
      taskList.insertBefore(renderTaskCard(task), taskList.firstChild);
      updateTaskCount();
      const isStock = task.taskType === 'analyze-replenishment';
      showNotification(isStock ? 'New budget review request!' : 'New approval request received!', 'info');
    });

    socket.on('task-completed', (data) => {
      tasks.delete(data.jobKey);
      var taskEl = document.getElementById('task-' + data.jobKey);
      if (taskEl) taskEl.remove();
      updateTaskCount();
      
      if (selectedJobKey === data.jobKey) {
        taskForm.classList.add('hidden');
        stockTaskForm.classList.add('hidden');
        noTaskSelected.classList.remove('hidden');
        selectedJobKey = null;
        taskForm.reset();
        stockTaskForm.reset();
      }
    });

    // Promotion form submission
    taskForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(taskForm);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch('/complete-task', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();
        
        if (result.success) {
          const approved = data.approved === 'true';
          showNotification(
            approved ? 'Promotion APPROVED! Proceeding to Marketing...' : 'Promotion REJECTED. Process ended.',
            approved ? 'success' : 'warning'
          );
          taskForm.reset();
          taskForm.classList.add('hidden');
          noTaskSelected.classList.remove('hidden');
        } else {
          showNotification(result.error || 'Failed to complete task', 'error');
        }
      } catch (error) {
        showNotification('Error: ' + error.message, 'error');
      }
    });

    // Stock form submission
    stockTaskForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(stockTaskForm);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch('/complete-stock-task', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        const result = await response.json();
        
        if (result.success) {
          const approved = data.budgetApproved === 'true';
          showNotification(
            approved ? 'Budget APPROVED! Proceeding to Logistics...' : 'Budget DENIED. Order cancelled.',
            approved ? 'success' : 'warning'
          );
          stockTaskForm.reset();
          stockTaskForm.classList.add('hidden');
          noTaskSelected.classList.remove('hidden');
        } else {
          showNotification(result.error || 'Failed to complete task', 'error');
        }
      } catch (error) {
        showNotification('Error: ' + error.message, 'error');
      }
    });
  </script>
</body>
</html>
